text-decoration:underline;

}
.contents{
border-bottom: 1px dotted #f00;
margin:10px 0 10px 0;

}

</style>
<script src="http://google.com/jsapi"></script>
<script>google.load('jquery','1.7.1') </script>
<script>
$('document').ready(function(){
	$.get("http://ax.itunes.apple.com/WebObjects/MZStoreServices.woa/ws/RSS/topsongs/limit=100/xml",function(data){
		$(data).find('entry').each(function(){
			var entry = $(this);
			var content = entry.find('content');
			contents = $('<div class="contents">'+content.text()+'</div>');
			contents.css('display','none');
			$('#content').append(contents);
			contents.slideDown(2000);
		});
		$('#content').prepend('<h3>Top Songs</h3>');
	});
	$.get("http://ax.itunes.apple.com/WebObjects/MZStoreServices.woa/ws/RSS/topMovies/xml",function(data){
		$(data).find('entry').each(function(){
			var entry = $(this);
			var content = entry.find('content');
			contents = $('<div class="contents">'+content.text()+'</div>');
			contents.css('display','none');
			$('#right_content').append(contents);
			contents.slideDown(2000);
		});
		$('#right_content').prepend('<h3>Top Movies</h3>');

	});
$.get("http://ax.itunes.apple.com/WebObjects/MZStoreServices.woa/ws/RSS/topfreeapplications/limit=100/xml",function(data){
		$(data).find('entry').each(function(){
			var entry = $(this);
			var content = entry.find('content');
			contents = $('<div class="contents">'+content.text()+'</div>');
			contents.css('display','none');
			$('#middle').append(contents);
			contents.slideDown(2000);
		});
		$('#middle').prepend('<h3>Top Applications</h3>');

	});



});

</script>
</head>
